BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ''
        BoxLayout:
            size_hint_x: 0.25
            orientation: 'vertical'
            Button
                text: 'Up'
                on_press: app.handle_increment(input_miles.text, 1)
            Button
                text: 'Down'
                on_press: app.handle_increment(input_miles.text, -1)

    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculate(input_miles.text)
    Label:
        id: output_label
        text: app.output_status
        color: (1, 1, 1, 1)